.index-nav{
  display: flex;
  flex-wrap: wrap;
}
.index-nav .nav-item{
  height: 168rpx;
  width: 24.33%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nav-item:nth-child(3n){
  border-right: none;
}
.nav-item text{
  font-size: 13px;
}
.index-nav image{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}
.divider{
