/* pages/cart/cart.wxss */

page{ 
 display: flex; 
 flex-direction: column; 
 height: 100%; 
} 
.navbar{ 
 flex: none; 
 display: flex; 
 background: #fff; 
} 
.navbar .item{ 
 position: relative; 
 flex: auto; 
 text-align: center; 
 line-height: 80rpx; 
} 
.navbar .item.active{ 
 color: grey; 
} 
.navbar .item.active:after{ 
 content: ""; 
 display: block; 
 position: absolute; 
 bottom: 0; 
 left: 0; 
 right: 0; 
 height: 4rpx; 
 background: #FFCC00; 
} 
.desc image{
  width:301rpx;
  margin:19rpx 36rpx;
  height:301rpx;
}
.pro .text{
  width:301rpx;
  font-size:12px !important;
}
.outer{
  display:flex;
  flex-wrap:wrap;
}
